<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Base application theme. -->
    <style name="AppThemes" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="rippleBackport">true</item>
        <item name="android:windowActionBar">false</item>

    </style>


    <!-- Light Themes-->

    <!-- Mocked Account -->
    <style name="MockedAccountLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="singleAccount">true</item>
        <!-- Remove the change account button -->
    </style>

    <!-- Accounts -->
    <style name="AccountsLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <!-- Drawer Header Image -->
    <style name="ImageHeaderLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
    </style>

    <!-- No Drawer Header -->
    <style name="NoHeaderLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
    </style>

    <!-- Custom Drawer Header -->
    <style name="CustomHeaderLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/theme_color</item>
        <item name="rippleBackport">true</item>
        <item name="colorPrimaryDark">@color/theme_color_dark</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_CUSTOM</item>
    </style>

    <style name="BaseActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/theme_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimaryDark">@color/theme_color_dark</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_CUSTOM</item>
    </style>
    <!-- Dark Themes-->

    <!-- Mocked Account -->
    <style name="MockedAccountDark" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="singleAccount">true</item>
        <!-- Remove the change account button -->
    </style>

    <!-- Accounts -->
    <style name="AccountsDark" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <!-- Drawer Header Image -->
    <style name="ImageHeaderDark" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
    </style>

    <!-- No Drawer Header -->
    <style name="NoHeaderDark" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
    </style>

    <!-- Custom Drawer Header -->
    <style name="CustomHeaderDark" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_CUSTOM</item>
    </style>

    <!-- Functionality Themes-->
    <!-- I used DRAWERTYPE_NO_HEADER only for get a simple tutorial, you can use any type of drawer obviously -->

    <!-- Unique Toolbar Color -->
    <style name="UniqueToolbarColor" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
        <item name="uniqueToolbarColor">true</item>
    </style>

    <!-- Ripple Backport support -->
    <style name="RippleBackport" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
        <item name="rippleBackport">true</item>
    </style>

    <!-- Multipane Support for tablets -->
    <style name="MultiPane" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="multipaneSupport">true</item>
    </style>

    <!-- custom section under account list -->
    <style name="CustomAccountSection" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <!-- Kitkat Traslucent Status bar -->
    <style name="KitkatStatusBar" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar.TranslucentKitKatStatusBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <!-- Master / Child Example -->
    <style name="MasterChild" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
    </style>

    <!-- Test Theme -->
    <style name="TestTheme" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>
    <!--login edittext-->
    <style name="login_edittext" parent="android:Widget">
        <item name="android:background">@drawable/login_edittext</item>
        <item name="android:textSize">@dimen/normal_edittext_textsize</item>
        <item name="android:padding">@dimen/login_edittext_padding</item>
        <item name="android:textColor">@color/login_edittext_textcolor</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--login edittext-->
    <style name="favorite_text" parent="android:Widget">
        <item name="android:background">@drawable/login_edittext</item>
        <item name="android:textSize">@dimen/normal_edittext_textsize</item>
        <item name="android:padding">@dimen/login_edittext_padding</item>
        <item name="android:textColor">@color/login_edittext_textcolor</item>
    </style>
    <!--modify edittext-->
    <style name="modify_edittext" parent="login_edittext">
        <item name="android:textSize">@dimen/modify_edittext_textsize</item>
    </style>

    <!--login lable-->
    <style name="login_lable" parent="android:Widget">
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textColor">@color/login_lable_font_color</item>
        <item name="android:paddingTop">@dimen/login_lable_padding_top</item>
        <item name="android:paddingBottom">@dimen/login_lable_padding_bottom</item>
        <item name="android:textSize">@dimen/login_lable_textsize</item>
    </style>

    <!-- login button -->
    <style name="login_button" parent="android:Widget">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/login_button_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- noraml button -->
    <style name="noraml_button" parent="android:Widget">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/param_button_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- blue noraml button -->
    <style name="blue_button" parent="noraml_button">
        <item name="android:background">@drawable/blue_button_selector</item>
    </style>

    <!-- other settings button -->
    <style name="settings_other_button" parent="android:Widget">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/settings_other_button_selector</item>
        <item name="android:textColor">@color/param_lable_textcolor</item>
        <item name="android:textSize">@dimen/param_lable_textsize</item>
    </style>

    <style name="normal_item_sub_title" parent="android:Widget">
        <item name="android:textSize">@dimen/listitem_goal_sub_title_size</item>
        <item name="android:textColor">@color/listitem_goal_sub_title_color</item>
    </style>

    <!-- expand button -->
    <style name="expand_button" parent="android:Widget">
        <item name="android:background">@drawable/expand_button_selector</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:clickable">true</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
        <item name="android:layout_width">23dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <!-- sample expand button -->
    <style name="sample_expand_button" parent="expand_button">
        <item name="android:background">@drawable/sample_expand_button_selector</item>
        <item name="android:layout_width">13dp</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <!-- class expand button -->
    <style name="class_expand_button" parent="expand_button">
        <item name="android:background">@drawable/class_expand_button_selector</item>
        <item name="android:layout_width">7dp</item>
        <item name="android:layout_height">7dp</item>
    </style>


    <style name="noraml_listview" parent="android:Widget">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:listSelector">@drawable/settings_other_button_background_on</item>
        <item name="android:scrollbars">none</item>
        <item name="android:dividerHeight">@dimen/normal_listview_dividerHeight</item>
        <item name="android:divider">@null</item>
        <item name="android:paddingLeft">@dimen/normal_listview_padding</item>
        <item name="android:paddingRight">@dimen/normal_listview_padding</item>
        <item name="android:paddingTop">@dimen/normal_listview_padding</item>
    </style>

    <style name="listitem_separator" parent="android:Widget">
        <item name="android:background">@drawable/listitem_separator</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- search button -->
    <style name="search_button" parent="android:Widget">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/search_button_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--search edittext-->
    <style name="search_edittext" parent="android:Widget">
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/searchbar_edittext_hint_color</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">@null</item>
    </style>

    <!-- pull to refresh list view header text -->
    <style name="ptrHeader_text" parent="android:Widget">
        <item name="android:textSize">@dimen/pull_to_refresh_header_textsize</item>
        <item name="android:textColor">@color/pull_to_refresh_lable_textcolor</item>
    </style>

    <!-- the lable text style of param activity and classtable modify activity -->
    <style name="param_text_style" parent="android:Widget">
        <item name="android:textColor">@color/param_lable_textcolor</item>
        <item name="android:textSize">@dimen/param_lable_textsize</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="class_modify_text_style" parent="param_text_style">
        <item name="android:layout_marginTop">@dimen/modify_lable_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/modify_lable_marginBottom</item>
    </style>

    <style name="classTab_normal_engtext">
        <item name="android:textColor">#ffd3d3d3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="classTab_normal_numtext">
        <item name="android:textColor">#ffd3d3d3</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="classTab_click_engtext">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="classTab_click_numtext">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="schoolActivityTab_click">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="schoolActivityTab_normal">
        <item name="android:textColor">#ffd3d3d3</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="menu_lable_style">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">@color/menu_textview</item>
        <item name="android:textSize">@dimen/menu_lable_textsize</item>
    </style>

    <style name="bus_station_text_style" parent="android:Widget">
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:textColor">@color/param_lable_textcolor</item>
        <item name="android:textSize">@dimen/param_lable_textsize</item>
    </style>

    <style name="bus_state_text_style" parent="android:Widget">
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@color/bus_state_lable_textcolor</item>
        <item name="android:textSize">@dimen/bus_state_lable_textsize</item>
    </style>

    <style name="bus_state_time_text_style" parent="android:Widget">
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:textColor">@color/bus_state_time_lable_textcolor</item>
        <item name="android:textSize">@dimen/bus_state_time_lable_textsize</item>
    </style>

    <style name="widget_tab_text_style">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">@dimen/widget_tab_textSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="edt_card_style">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:hint">@string/hint_card_date</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="menu_title_label">
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#ff5a5a5b</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/menu_title_background</item>
    </style>

    <style name="menu_item">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="menu_item_icon">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="menu_item_label">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#2c2b2b</item>
    </style>

    <style name="tab_item_style">
        <item name="android:button">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@drawable/tab_textcolor_selector</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="Dialog_Notitle" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/title_white</item>
    </style>

    <style name="menu_button">
        <item name="android:alpha">0.9</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/text_size_sub_body_button_menu</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/menu_button_selector</item>

    </style>


    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>
</resources>