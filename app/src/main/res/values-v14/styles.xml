<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- ActionBar Style -->
    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
        <item name="android:subtitleTextStyle">@style/ActionBarSubTitle</item>
        <item name="android:background">@drawable/action_bar</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <!-- Theme -->
    <style name="Theme.SpecialWhite" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background_normal</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="actionBarWidgetTheme">@style/ActionBarWidget</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabs</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="ActionBarTabs"
        parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_special</item>
    </style>

</resources>