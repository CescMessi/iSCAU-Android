<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                tools:context=".ConversationActivity">

    <RelativeLayout
        android:id="@+id/umeng_fb_contact_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/theme_color"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">


        <LinearLayout
            android:id="@+id/title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#0000"
                android:gravity="center"
                android:text="联系方式"
                android:textColor="@color/title_white"
                android:textSize="20dp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/umeng_fb_save"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#0000"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/umeng_fb_tick_selector"
            android:textColor="@color/title_white"
            android:textSize="@dimen/text_size_button"/>

        <ImageButton
            android:id="@+id/umeng_fb_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#0000"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_return_title"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/umeng_fb_contact_header"
        android:background="@drawable/umeng_fb_conversation_bg">

        <EditText
            android:id="@+id/umeng_fb_contact_info"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="#EEEEEE"
            android:gravity="left|top"
            android:hint="@string/feedback_contact_hint"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/umeng_fb_contact_update_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:text="@string/umeng_fb_contact_update_at"
        android:textColor="#333333"
        android:textSize="8sp"
        android:visibility="gone"/>

</RelativeLayout>