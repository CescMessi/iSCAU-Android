<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_normal"
              android:orientation="vertical">

    <cn.scau.scautreasure.widget.ElasticScrollView_
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                 android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="28dp"
            android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:text="课前提醒"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/alert_before_class"/>

                </LinearLayout>
            <!--<TextView-->
                <!--style="@style/menu_title_label"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/settings_server"/>-->

            <!--<cn.scau.scautreasure.widget.ParamWidget_-->
                <!--android:id="@+id/param_server"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->

            <cn.scau.scautreasure.widget.ParamWidget_
                android:id="@+id/param_classTableAsFirstScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <!--<TextView
                style="@style/menu_title_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/settings_ringer_model"/>-->

            <cn.scau.scautreasure.widget.ParamWidget_
                android:id="@+id/param_ringer_mode_during_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                style="@style/listitem_separator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:contentDescription=""/>

            <cn.scau.scautreasure.widget.ParamWidget_
                android:id="@+id/param_ringer_mode_after_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/menu_title_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/settings_other"/>

            <Button
                android:id="@+id/btn_notification_setting"
                style="@style/settings_other_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"

                android:text="@string/btn_notification_setting"/>

            <ImageView
                style="@style/listitem_separator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:contentDescription=""/>

            <Button
                android:id="@+id/btn_update"
                style="@style/settings_other_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/btn_update"/>

            <ImageView
                style="@style/listitem_separator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:contentDescription=""/>

            <Button
                android:id="@+id/btn_about"
                style="@style/settings_other_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/btn_about"/>

            <!--<Button-->
                <!--android:id="@+id/btn_save"-->
                <!--style="@style/noraml_button"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:layout_marginRight="15dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:text="@string/btn_save"/>-->

            <Button
                android:id="@+id/btn_change_account"
                style="@style/blue_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/btn_change_account"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

        </LinearLayout>
    </cn.scau.scautreasure.widget.ElasticScrollView_>
</LinearLayout>