<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include
        layout="@layout/base_activity_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.gc.materialdesign.views.ScrollView
        android:id="@+id/scroll"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/code_2d"/>

            <TextView
                android:id="@+id/textView_appName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="5dp"
                android:text="华农宝 v3.0"
                android:textColor="#ff376b"
                android:textSize="@dimen/text_size_title"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoLink="web"
                    android:text="深度合作:\n\t\t\t\t\t\t\t华南农业大学学生会"
                    android:textColor="#434242"
                    android:textSize="@dimen/text_size_body"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoLink="web"
                    android:text="官方网站: http://www.huanongbao.com"
                    android:textColor="#434242"
                    android:textSize="@dimen/text_size_body"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:autoLink="web"
                    android:text="新浪微博: @华农宝工作室"
                    android:textColor="#434242"
                    android:textSize="@dimen/text_size_body"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoLink="web"
                    android:text="\t\t\t\t\t\t\thttp://weibo.com/huanongbao"
                    android:textColor="#434242"
                    android:textSize="@dimen/text_size_body"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="微信公众号: 搜索 华农宝 "
                    android:textColor="#434242"
                    android:textSize="@dimen/text_size_body"
                    />
            </LinearLayout>


        </LinearLayout>
    </com.gc.materialdesign.views.ScrollView>
</LinearLayout>
