<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/background_normal"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/listitem_padding"
        android:paddingBottom="@dimen/listitem_padding"
        android:paddingLeft="@dimen/listitem_title_padding_left"
        android:paddingRight="@dimen/listitem_title_padding_left"
        android:id="@+id/frameLayout">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/comment_item_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/listitem_course_property" />

                <TextView
                    style="@style/comment_item_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自然科学"
                    android:id="@+id/course_property" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/comment_item_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/listitem_course_score" />

                <TextView
                    style="@style/comment_item_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/course_score"
                    android:text="2" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comments_metoo"
                android:id="@+id/ToComment"
                android:background="#e0edff"
                android:padding="10dp" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp">

                <TextView
                    style="@style/normal_item_sub_title"
                    android:drawableLeft="@drawable/icon_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1111"
                    android:id="@+id/like_number"
                    android:textSize="20sp" />

                <TextView
                    style="@style/normal_item_sub_title"
                    android:drawableLeft="@drawable/icon_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dislike_number"
                    android:text="1111"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp" />
            </TableRow>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="bottom">

            <TextView
                style="@style/comment_item_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论(共" />

            <TextView
                style="@style/comment_item_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/comment_number" />

            <TextView
                style="@style/comment_item_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="条)"
                android:id="@+id/textView" />

        </LinearLayout>

    </FrameLayout>

    <ImageView
        style="@style/listitem_separator"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription=""
        android:id="@+id/imageView" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comments_loading"
            android:id="@+id/noComments"
            android:layout_gravity="center_horizontal"
            android:singleLine="false" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <com.handmark.pulltorefresh.library.PullToRefreshListView
                xmlns:ptr="http://schemas.android.com/apk/res-auto"
                ptr:ptrMode="pullFromEnd"
                ptr:ptrHeaderTextAppearance="@style/ptrHeader_text"
                ptr:ptrDrawable="@drawable/ptr_rotate"
                style="@style/noraml_listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/listView"
                android:orientation="horizontal" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>