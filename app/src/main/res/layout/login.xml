<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="@color/background_normal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription=""
        android:orientation="vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/login_frame_margin"
            android:background="@drawable/login_frame"
            android:orientation="vertical"
            android:padding="@dimen/login_frame_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/tv_login"
                    android:textColor="@color/login_lable_font_color"
                    android:textSize="@dimen/login_lable_textsize"/>

                <TextView
                    android:id="@+id/textView"
                    style="@style/login_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_username"/>

                <EditText

                    android:id="@+id/edt_userName"
                    style="@style/login_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_username"/>

                <TextView
                    android:id="@+id/textView1"
                    style="@style/login_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_edupassword"/>

                <EditText
                    android:id="@+id/edt_eduSysPassword"
                    style="@style/login_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_edusyspassword"
                    android:password="true"/>

                <TextView
                    android:id="@+id/textView2"
                    style="@style/login_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_libpassword"/>

                <EditText
                    android:id="@+id/edt_libPassword"
                    style="@style/login_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_libpassword"
                    android:password="true"/>

                <TextView
                    android:id="@+id/textView3"
                    style="@style/login_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_cardpassword"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/edt_cardPassword"
                    style="@style/login_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_cardpassword"
                    android:password="true"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_special_entrance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/login_lable_padding_top"
                    android:text="@string/tv_special_entrance"
                    android:textColor="#A8A8A8"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/btn_save"
                    style="@style/login_button"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/login_lable_padding_bottom"
                    android:layout_marginTop="@dimen/login_lable_padding_top"
                    android:text="@string/btn_save"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>

